<!DOCTYPE html>
<html>
  <head>
    <title>Pragmatic Book Shelf</title>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>

  <body class='<%= controller.controller_name %>'>
    <div id="banner">
      <%= image_tag("logo.png") %>
      <%= @page_title || "Our Books" %>
    </div>

    <div id="columns">
      <div id="side">
        <div id="cart">
          <%= render @cart %>
        </div>
       
        <ul>
          <li><%= link_to 'Home', home_path %></li>
          <li><%= link_to 'Shop', shopper_path %></li>
          <li><%= link_to 'Questions', faq_path %></li>
          <li><%= link_to 'News', news_path %></li>
          <li><%= link_to 'Contact', contact_path %></li>
        </ul>

        <% if session[:user_id] %>
          <ul>
            <li><%= link_to 'Orders',   orders_path   %></li>
            <li><%= link_to 'Books', products_path %></li>
            <li><%= link_to 'Users',    users_path    %></li>
          </ul>

          <%= button_to 'Logout', logout_path, method: :delete   %>
        <% else %>
          <%= button_to 'Login', login_path, method: :get %>
        <% end %>

      </div>
      
      <div id="main">
        <%= yield %>
      </div>
   </div>

  </body>

</html>


